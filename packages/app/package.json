{
  "name": "wmfnext-host-app",
  "version": "0.0.0",
  "private": true,
  "author": "Patrick Lafrance",
  "license": "Apache-2.0",
  "repository": "https://github.com/patricklafrance/wmfnext-host.git",
  "type": "module",
  "scripts": {
    "prebuild": "yarn clean",
    "build": "webpack --config webpack.prod.cjs",
    "clean": "run-p delete-dist delete-ts-cache",
    "delete-ts-cache": "yarn rimraf *.tsbuildinfo",
    "delete-dist": "rimraf dist",
    "dev": "webpack serve --config webpack.dev.cjs",
    "serve-build": "run-s build serve-build:start-server",
    "serve-build:start-server": "yarn http-server dist -p 8080 -P http://localhost:8080?"
  }
}
