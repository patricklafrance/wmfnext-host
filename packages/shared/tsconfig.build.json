{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../tsconfig.shared.json",
    "compilerOptions": {
        // Generate typing files.
        "noEmit": false,
        "declaration": true,
        // Generate source map.
        "sourceMap": true,
        // Otherwise the generated typings files will be create next to their source code files instead of the "dist" folder
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "watchOptions": {
        "excludeDirectories": ["**/node_modules", "**/dist"]
    }
}
